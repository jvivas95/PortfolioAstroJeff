---
import '../styles/global.css';
import { getNombreSeccion } from '../utils/helpers.js';
---

<section id="conocimientos" class="w-full py-20 bg-transparent">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col relative z-10">
    <!-- Título -->
    <h1 class="scroll-animation scroll-animation-default text-4xl md:text-7xl font-extrabold text-center mb-12 translate-y-10 transition-all duration-1000" data-animate>
      {getNombreSeccion("conocimientos")}
    </h1>

    <!-- Subtítulo -->
    <p class="scroll-animation scroll-animation-default text-center mb-14 text-lg md:text-2xl  translate-y-10 transition-all duration-1000 delay-200" data-animate>
      Stack con el que he trabajado y siempre abierto a aprender más
    </p>

    <!-- Sección Frontend -->
    <h2 class="text-2xl font-bold mt-8 text-center md:text-3xl">Frontend</h2>
    <!-- Cards Frontend -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4 gap-4 text-center mb-16">
      <!-- HTML -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="300">
        <span class="font-bold text-lg md:text-2xl">HTML5</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Maquetación semántica</small>
      </div>
      <!-- CSS -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="400">
        <span class="font-bold text-lg md:text-2xl">CSS3</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Flexbox & Grid</small>
      </div>
      <!-- JS -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="500">
        <span class="font-bold text-lg md:text-2xl">JS</span>
        <span class="text-lg md:text-2xl">JavaScript</span>
        <small class="block text-gray-400 mt-2 md:text-lg">ES6+</small>
      </div>
      <!-- REACT -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="600">
        <span class="font-bold text-lg md:text-2xl">React</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Componentes</small>
      </div>
      <!-- Astro -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="600">
        <span class="font-bold text-lg md:text-2xl">Astro</span>
        <small class="block text-gray-400 mt-2 md:text-lg">SSG</small>
      </div>
      <!-- Tailwind -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="600">
        <span class="font-bold text-lg md:text-2xl">Tailwind</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Diseño responsivo</small>
      </div>
      <!-- Chart.js -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="600">
        <span class="font-bold text-lg md:text-2xl">Chart.js</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Gráficas interactivas</small>
      </div>
      <!-- Bootstrap -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="600">
        <span class="font-bold text-lg md:text-2xl">Bootstrap</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Plantillas prediseñadas</small>
      </div>

    </div>
    
    

    <!-- Sección Backend -->
    <h2 class="text-2xl font-bold mt-8 text-center md:text-3xl">Backend</h2>
    <!-- Cards Backend -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-3 gap-3 text-center mb-16">
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="600">
        <span class="font-bold text-lg md:text-2xl">PHP</span>
        <small class="block text-gray-400 mt-2 md:text-lg">POO</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="700">
        <span class="font-bold text-lg md:text-2xl">Symfony</span>
        <small class="block text-gray-400 mt-2 md:text-lg">CRUD, Forms</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="800">
        <span class="font-bold text-lg md:text-2xl">MySQL</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Consultas/Índices</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm
                  hover:bg-white/10 hover:scale-105 hover:border-white/20
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10"
           data-animate data-delay="900">
        <span class="font-bold text-lg md:text-2xl">Node.js</span>
        <small class="block text-gray-400 mt-2 md:text-lg">APIs, Backend JS</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm
                  hover:bg-white/10 hover:scale-105 hover:border-white/20
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10"
           data-animate data-delay="950">
        <span class="font-bold text-lg md:text-2xl">Express</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Framework Node.js</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm
                  hover:bg-white/10 hover:scale-105 hover:border-white/20
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10"
           data-animate data-delay="1000">
        <span class="font-bold text-lg md:text-2xl">MongoDB</span>
        <small class="block text-gray-400 mt-2 md:text-lg">NoSQL, Bases de datos</small>
      </div>
    </div>

    <!-- Sección Herramientas -->
    <h2 class="text-2xl font-bold mt-8 text-center md:text-3xl">Herramientas</h2>
    <!-- Cards Herramientas -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4 gap-4 text-center">
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="900">
        <span class="font-bold text-lg md:text-2xl">Git</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Flujos básicos</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="1000">
        <span class="font-bold text-lg md:text-2xl">Linux</span>
        <small class="block text-gray-400 mt-2 md:text-lg">CLI</small>
      </div>
      <!--
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="1200">
        <span class="font-bold text-lg md:text-3xl">Docker</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Entornos</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm 
                  hover:bg-white/10 hover:scale-105 hover:border-white/20 
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10" 
           data-animate data-delay="1400">
        <span class="font-bold text-lg md:text-3xl">Testing</span>
        <small class="block text-gray-400 mt-2 md:text-lg">PHPUnit</small>
      </div>
       -->
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm
                  hover:bg-white/10 hover:scale-105 hover:border-white/20
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10"
           data-animate data-delay="1100">
        <span class="font-bold text-lg md:text-2xl">GitHub</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Repositorios</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm
                  hover:bg-white/10 hover:scale-105 hover:border-white/20
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10"
           data-animate data-delay="1150">
        <span class="font-bold text-lg md:text-2xl">Copilot</span>
        <small class="block text-gray-400 mt-2 md:text-lg">IA para desarrollo</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm
                  hover:bg-white/10 hover:scale-105 hover:border-white/20
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10"
           data-animate data-delay="1200">
        <span class="font-bold text-lg md:text-xl">InfinityFree</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Hosting gratuito</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm
                  hover:bg-white/10 hover:scale-105 hover:border-white/20
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10"
           data-animate data-delay="1250">
        <span class="font-bold text-lg md:text-2xl">Vercel</span>
        <small class="block text-gray-400 mt-2 md:text-lg">Deploy frontend</small>
      </div>
      <div class="scroll-animation scroll-animation-default p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm
                  hover:bg-white/10 hover:scale-105 hover:border-white/20
                  transition-all duration-300 cursor-pointer hover:shadow-lg hover:shadow-white/5
                   translate-y-10"
           data-animate data-delay="1300">
        <span class="font-bold text-lg md:text-2xl">FileZilla</span>
        <small class="block text-gray-400 mt-2 md:text-lg">FTP/SFTP</small>
      </div>
    </div>
  </div>
</section>
