---
import '../styles/global.css';
import { getNombreSeccion } from '../utils/helpers.js';
---

<section id="contacto" class="w-full py-20 bg-transparent">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center">
    <!-- Título -->
    <h2 class="scroll-animation scroll-animation-default text-5xl md:text-7xl font-extrabold text-center mb-12">
      {getNombreSeccion("contacto")}
    </h2>

    <!-- Formulario -->
    <form 
      action="https://formsubmit.co/jefferson.vivas.95@gmail.com" 
      method="POST"
      class="scroll-animation scroll-animation-default w-full max-w-2xl bg-white/5 backdrop-blur-sm border border-white/10 shadow-lg rounded-2xl p-8 space-y-6"
    >
      <!-- Nombre -->
      <div>
        <label for="nombre" class="block text-sm font-semibold mb-2 text-gray-300">Nombre</label>
        <input 
          type="text" 
          id="nombre" 
          name="nombre" 
          required 
          class="w-full p-3 rounded-lg bg-gray-900/70 text-gray-200 border border-white/10 focus:outline-none focus:ring-2 focus:ring-purple-500"
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm font-semibold mb-2 text-gray-300">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="w-full p-3 rounded-lg bg-gray-900/70 text-gray-200 border border-white/10 focus:outline-none focus:ring-2 focus:ring-purple-500"
        />
      </div>

      <!-- Mensaje -->
      <div>
        <label for="mensaje" class="block text-sm font-semibold mb-2 text-gray-300">Mensaje</label>
        <textarea 
          id="mensaje" 
          name="mensaje" 
          rows="5" 
          required 
          class="w-full p-3 rounded-lg bg-gray-900/70 text-gray-200 border border-white/10 focus:outline-none focus:ring-2 focus:ring-purple-500"
        ></textarea>
      </div>

      <!-- Botón -->
      <div class="text-center">
        <button 
          type="submit" 
          class="px-6 py-3 rounded-xl font-bold bg-gradient-to-r from-purple-500 to-blue-500 text-white shadow-lg hover:scale-105 transition-transform duration-300"
        >
          Enviar mensaje
        </button>
      </div>

      <!-- Opcional: evitar spam en formsubmit -->
      <input type="hidden" name="_captcha" value="false">
      <input type="hidden" name="_next" value="https://jvivas.es/gracias">
    </form>
  </div>
</section>
