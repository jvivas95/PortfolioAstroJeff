---
import '../styles/global.css';
import Icons from '../icons/icons.astro';
import TypedHero from './TypedHero';
---

<div class="relative h-screen flex flex-col justify-center">
  <!-- Fondo de luz neÃ³n centrado y controlable -->
  <div class="fixed inset-0 flex items-center justify-center pointer-events-none">
    <div class="neon-breathe-bg w-[300px] h-[300px]"></div>
  </div>
  <div class="pl-8 pr-8 md:pl-24 lg:pl-48 relative z-10">
    <p class="scroll-animation scroll-animation-default text-2xl sm:text-3xl md:text-4xl">Bienvenid@s!</p>

    <!-- EFECTO TYPE EFFECT -->
