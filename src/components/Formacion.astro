---
import '../styles/global.css';
import { getNombreSeccion } from '../utils/helpers.js';
---

<section id="formacion" class="w-full py-20 bg-transparent">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col">
    <!-- Título -->
    <h2 class="scroll-animation scroll-animation-default text-5xl md:text-7xl font-extrabold text-center mb-12">
      {getNombreSeccion("formacion")}
    </h2>

    <!-- Timeline -->
    <div class="relative ml-8">
      <!-- Línea vertical con gradiente -->
      <div class="absolute left-0 top-0 bottom-0 w-[2px] bg-gradient-to-b from-purple-500 to-blue-500 rounded-full"></div>

      <!-- UOC -->
      <div class="scroll-animation scroll-animation-default delay-1000 relative pl-10 mb-10 pt-6">
        <!-- Punto -->
        <span class="absolute left-[-9px] top-8 w-4 h-4 rounded-full bg-gray-900 border-2 border-purple-500 shadow-[0_0_0_4px_rgba(124,92,255,0.2)]"></span>
        <div class="font-extrabold text-lg">Ingeniería informática</div>
        <div class="text-sm">UOC - Universitat Oberta de Catalunya</div>
        <div class="text-gray-400 text-sm mb-2">Actualmente (Barcelona)</div>
      </div>

      <!-- SYMFONY -->
      <div class="scroll-animation scroll-animation-default delay-1000 relative pl-10 mb-10">
        <!-- Punto -->
        <span class="absolute left-[-9px] top-2 w-4 h-4 rounded-full bg-gray-900 border-2 border-purple-500 shadow-[0_0_0_4px_rgba(124,92,255,0.2)]"></span>
        <div class="font-extrabold text-lg">Curso Symfony 7</div>
        <div class="text-sm">Symfony Casts</div>
        <div class="text-gray-400 text-sm mb-2">Agosto 2025 - Actualmente (Barcelona)</div>
      </div>

      <!-- MERN -->
      <div class="scroll-animation scroll-animation-default delay-1000 relative pl-10 mb-10">
        <!-- Punto -->
        <span class="absolute left-[-9px] top-2 w-4 h-4 rounded-full bg-gray-900 border-2 border-purple-500 shadow-[0_0_0_4px_rgba(124,92,255,0.2)]"></span>
        <div class="font-extrabold text-lg">Curso MERN (Mongo DB, Express, React y Node.js)</div>
        <div class="text-sm">UDEMY</div>
        <div class="text-gray-400 text-sm mb-2">Abril 2025 - Junio 2025 (Barcelona)</div>
      </div>

      <!-- LARAVEL 11 -->
      <div class="scroll-animation scroll-animation-default delay-1000 relative pl-10 mb-10">
        <!-- Punto -->
        <span class="absolute left-[-9px] top-2 w-4 h-4 rounded-full bg-gray-900 border-2 border-purple-500 shadow-[0_0_0_4px_rgba(124,92,255,0.2)]"></span>
        <div class="font-extrabold text-lg">Curso Laravel 11</div>
        <div class="text-sm">UDEMY</div>
        <div class="text-gray-400 text-sm mb-2">Marzo 2025 - Mayo 2025 (Barcelona)</div>
      </div>

      <!-- GS DAW -->
      <div class="scroll-animation scroll-animation-default delay-1000 relative pl-10 mb-10">
        <!-- Punto -->
        <span class="absolute left-[-9px] top-2 w-4 h-4 rounded-full bg-gray-900 border-2 border-purple-500 shadow-[0_0_0_4px_rgba(124,92,255,0.2)]"></span>
        <div class="font-extrabold text-lg">Grado Superior en Desarrollo de Aplicaciones Web</div>
        <div class="text-sm">iFP - Innovación en Formación Profesional</div>
        <div class="text-gray-400 text-sm mb-2">Septiembre 2022 - Marzo 2025 (Barcelona)</div>
      </div>
    </div>
  </div>
</section>
